<UserControl x:Class="UMIASWPF.View.User.UserEl.PhoneElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UMIASWPF.View.User.UserEl"
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="1130">
    <Grid Background="{DynamicResource SecondaryBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="566*"/>
            <ColumnDefinition Width="553*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="PhoneNumber" Text="+7 495 051" Grid.Column="1" VerticalAlignment="Center" Foreground="{DynamicResource Focusing}" FontSize="16"/>
        <TextBlock x:Name="Organization" Text="Единая служба психологической помощи, круглосуточно. Или позвоните по городскому на номер 051" Foreground="{DynamicResource PrimaryForeground}"
               Grid.Column="2" VerticalAlignment="Center" TextWrapping="Wrap" TextAlignment="Right" FontSize="16"/>
    </Grid>
</UserControl>
