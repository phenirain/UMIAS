<UserControl x:Class="UMIASWPF.View.User.UserEl.AnalysElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UMIASWPF.View.User.UserEl"
             mc:Ignorable="d" 
             d:DesignHeight="105" d:DesignWidth="350">

        <Button Style="{DynamicResource ClearButton}">
            <Grid Background="{DynamicResource PrimaryBackground}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="110*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="38*"/>
                    <RowDefinition Height="25*"/>
                </Grid.RowDefinitions>

            <TextBlock Text="{Binding NameAnalys}" Grid.Column="1" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding Day}" Grid.Column="1" Grid.Row="2" FontSize="12"
                       Foreground="#807F7F" TextAlignment="Center"  VerticalAlignment="Center" />
            </Grid>
        </Button>
</UserControl>
