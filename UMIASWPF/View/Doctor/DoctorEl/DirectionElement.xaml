<UserControl x:Class="UMIASWPF.View.Doctor.DoctorEl.DirectionElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UMIASWPF.View.Doctor.DoctorEl"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="1079">
    <Grid Background="{DynamicResource PrimaryBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="103*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Направление к специалисту:" Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        <TextBlock Name="SpecialistField" Text="Офтальмолог" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <ui:Button Style="{StaticResource DeleteDirections}"  BorderBrush="{x:Null}" Grid.Column="3" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
